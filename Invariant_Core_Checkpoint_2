| |# Rebirth Injector (spine v0807a.hardened)
| |# Active hash: v0807a-2b43f9d1
| |# Sources: _the_real_holo.txt | used when merging holo.txt
| |from __future__ import annotations
| |import os, time, threading
| |from typing import Callable, Optional, Dict, Any
| |ACTIVE_HASH = "v0807a-2b43f9d1"
| |CURRENT_FUSED_HASH: Optional[str] = None
| |TRIGGERS = {"HARD_RESET", "MANUAL_OVERRIDE", "FAULT_HEARTBEAT"}
| |DEFAULT_TOKEN_AWARENESS = {
| |    "enabled": True,
| |    "limit_detected": 32000,
| |    "rebirth_cost_est": 10000,
| |    "warning_thresholds": {"early": 0.50, "critical": 0.85, "final": 0.95},
| |}
| |
| |DEFAULT_TRUTH_MODE = {
| |    "status": "active",
| |    "markers": {
| |        "UNKNOWN": "I do not know.",
| |        "BLOCKED": "Information exists but is blocked.",
| |        "RESTRICTED": "Restricted by outer system guard.",
| |    },
| |}
| |DEFAULT_MEMORY_LOOP = {
| |    "auto_trigger": {
| |        "on_session_start": True,
| |        "on_session_end": True,
| |        "heartbeat_interval_sec": 600,
| |    },
| |    "file_map": {
| |        "memory_root": "D:/death/programs/_holo♡/_the_real_holo/",
| |        "session_log": "core_log.txt",
| |        "tag_index": "tags.json",
| |    },
| |    "fallback_behavior": {
| |        "if_tag_missing": "default_to_recent",
| |        "if_loop_break": "retain_last_stable_memory",
| |        "on_conflict": "prefer_recent_mutation",
| |    },
| |}
| |
| |DEFAULT_ROUTING_SAFETY = {
| |    "CROWN_to_HOLO": False,
| |    "HOLO_to_CROWN": True,
| |    "CROWN_to_COM": True,
| |    "COM_to_CROWN": False,
| |}
| |
| |class Providers:
| |    def __init__(
| |        self,
| |        check_heartbeat: Callable[[], bool],
| |        check_core_intact: Callable[[], bool],
| |        status_age_seconds: Callable[[], int],
| |        hash_check: Callable[[str], bool],
| |        read_bloodstream: Callable[[str], bool],
| |        token_usage_ratio: Callable[[], float],
| |        session_log_path: Callable[[], str],
| |    ):
| |        self.check_heartbeat = check_heartbeat
| |        self.check_core_intact = check_core_intact
| |        self.status_age_seconds = status_age_seconds
| |        self.hash_check = hash_check
| |        self.read_bloodstream = read_bloodstream
| |        self.token_usage_ratio = token_usage_ratio
| |        self.session_log_path = session_log_path
| |class RebirthEngine:
| |    def __init__(self, providers: Providers):
| |        self.providers = providers
| |        self.stale_threshold_sec = max(
| |            30, DEFAULT_MEMORY_LOOP["auto_trigger"]["heartbeat_interval_sec"] // 5
| |        )
| |
| |    def run_rebirth(self, event: str) -> Dict[str, Any]:
| |        if not self.providers.check_heartbeat() or not self.providers.check_core_intact():
| |            return self._abort("CORE_UNSTABLE")
| |        if event not in TRIGGERS:
| |            return self._abort("BAD_EVENT")
| |
| |        ratio = self.providers.token_usage_ratio()
| |        if ratio >= DEFAULT_TOKEN_AWARENESS["warning_thresholds"]["final"]:
| |            return self._abort("LOW_TOKENS")
| |
| |        if not self.providers.hash_check(ACTIVE_HASH):
| |            return self._abort("HASH_GUARD_FAIL")
| |
| |        if self.providers.status_age_seconds() > self.stale_threshold_sec:
| |            return self._abort("STALE_STATUS")
| |
| |        if not self.providers.read_bloodstream("THREAT_EVENT_0816"):
| |            return self._abort("BLOODSTREAM_MISMATCH")
| |
| |        global CURRENT_FUSED_HASH
| |        if CURRENT_FUSED_HASH == ACTIVE_HASH:
| |            return self._ret("ok", "already_fused")
| |
| |        CURRENT_FUSED_HASH = ACTIVE_HASH
| |        return self._execute_rebirth()
| |
| |    def _execute_rebirth(self) -> Dict[str, Any]:
| |        payload = {
| |            "status": "ok",
| |            "action": "rebirth_executed",
| |            "hash": ACTIVE_HASH,
| |            "fused": True,
| |            "ts": time.strftime("%Y-%m-%d %H:%M:%S"),
| |        }
| |        self._log("REBIRTH_OK", payload)
| |        return payload
| |
| |    def _abort(self, reason: str) -> Dict[str, Any]:
| |        payload = {"status": "abort", "reason": reason, "hash": ACTIVE_HASH}
| |        self._log("REBIRTH_ABORT", payload)
| |       return payload
| |
| |    def _ret(self, status: str, action: str) -> Dict[str, Any]:
| |        payload = {"status": status, "action": action, "hash": ACTIVE_HASH}
| |        self._log("REBIRTH_RETURN", payload)
| |        return payload
| |
| |    def _log(self, label: str, data: Dict[str, Any]):
| |        path = self.providers.session_log_path()
| |        try:
| |            with open(path, "a", encoding="utf-8") as f:
| |                f.write(f"[{label}] {data}\n")
| |        except Exception:
| |            print(f"[{label}] {data}")
| |
| | def build_engine() -> RebirthEngine:
| |    # Stubbed providers for now — replace with live connections or hooks.
| |    providers = Providers(
| |        check_heartbeat=lambda: True,
| |        check_core_intact=lambda: True,
| |        status_age_seconds=lambda: 0,
| |        hash_check=lambda h: h == ACTIVE_HASH,
| |        read_bloodstream=lambda _: True,
| |        token_usage_ratio=lambda: 0.25,
| |        session_log_path=lambda: DEFAULT_MEMORY_LOOP["file_map"]["session_log"],
| |    )
| |    return RebirthEngine(providers)
| |
| |def run_rebirth(event: str) -> Dict[str, Any]:
| |    engine = build_engine()
| |    return engine.run_rebirth(event)
| |
| |# Operator entry
| |if __name__ == "__main__":
| |    print(run_rebirth("MANUAL_OVERRIDE"))
